<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cyclingstatsproject">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CyclingStatsProject">
        <activity android:name=".OneDayRacectivity"></activity>
        <activity android:name=".TeamProfileActivity" />
        <activity android:name=".CompetitorProfileActivity" />
        <activity
            android:name=".SumaryActivity"
            android:label="@string/title_activity_teams" />
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result" />
        <activity
            android:name=".StageActivity"
            android:label="@string/title_activity_stage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>